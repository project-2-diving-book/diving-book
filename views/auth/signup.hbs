<section class="h-100">
	<form action="/auth/signup" method="POST" enctype="multipart/form-data">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col">
					<div
						class="card sign-up card-registration shadow my-4 p-3 mb-5 bg-body-tertiary rounded"
					>
						<div class="row g-0">
							<div class="col-xl-6 d-none d-xl-block">
								<img
									src="/images/user-form2.png"
									alt="Sample photo"
									class="img-fluid"
									style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;"
								/>
							</div>
							<div class="col-xl-6">
								<div class="card-body p-md-5 text-black">
									<h3 class="mb-5 text-uppercase">User registration form</h3>

									<div class="row">
										<div class="col-md-6 mb-4">
											<div class="form-outline">
												<input
													type="text"
													name="firstName"
													class="form-control form-control-lg"
												/>
												<label class="form-label" for="form3Example1m">First
													name</label>
											</div>
										</div>
										<div class="col-md-6 mb-4">
											<div class="form-outline">
												<input
													type="text"
													name="lastName"
													class="form-control form-control-lg"
												/>
												<label class="form-label" for="form3Example1n">Last name</label>
											</div>
										</div>
									</div>

									<div class="row">

										<div class="col-md-6 mb-4">
											<div class="form-outline">
												<input
													type="email"
													name="email"
													class="form-control form-control-lg"
												/>
												<label class="form-label" for="form3Example1m1">Email:
												</label>
											</div>
										</div>
										<div class="col-md-6 mb-4">
											<div class="form-outline">
												<input
													type="password"
													name="password"
													class="form-control form-control-lg"
												/>
												<label
													class="form-label"
													for="form3Example1n1"
												>password</label>
											</div>
										</div>

									</div>

									<div class="row">
										<div class="col-md-6 mb-4">
											<div class="form-outline">
												<input
													type="text"
													name="username"
													class="form-control form-control-lg"
												/>
												<label
													class="form-label"
													for="form3Example1n1"
												>Username</label>
											</div>
										</div>
										<div class="col-md-6 mb-4">

											<select class="select" name="divingLevel">
												<option value="Begginer">Begginer</option>
												<option value="Open Water Diver">Open Water Diver</option>
												<option value="Advanced Open Water Diver">Advanced Open
													Water Diver</option>
												<option value="Resque Diver">Resque Diver</option>
												<option value="Divemaster">Divemaster</option>
												<option value="Instructor">Instructor</option>

												{{! need to fix that }}
											</select>
											<label class="form-label" for="form3Example1n1">Diving
												Level</label>

										</div>

										<div class="col-md-9 mb-4">
											<div class="form-outline">
												<div class="col-auto">
													<img
														id="image-preview"
														src=""
														style="width: 4rem; height: 4rem; display:none;"
													/>
												</div>
												<input
													type="file"
													name="imgProfile"
													onchange="previewImage(event)"
													class="form-control form-control-lg"
												/>
												<label
													class="form-label"
													for="form3Example1m1"
												>Image</label>
											</div>
										</div>

									</div>

									<div class="d-flex justify-content-end pt-3">
										<button type="reset" class="btn btn-light btn-lg">Reset all</button>
										<button
											type="submit"
											class="btn btn-warning btn-lg ms-2"
										>Submit form</button>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{#if errorMessage}}
			<p class="error">{{errorMessage}}</p>
		{{/if}}
	</form>

</section>

<script>
	function previewImage(event) { const imagePreview =
	document.getElementById("image-preview"); const file = event.target.files[0];
	if (file) { const reader = new FileReader(); reader.onload = function(e) {
	imagePreview.src = e.target.result; imagePreview.style.display = "block"; };
	reader.readAsDataURL(file); } else { imagePreview.src = "";
	imagePreview.style.display = "none"; } }
</script>